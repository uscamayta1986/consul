<%= form_for([@community, @topic]) do |f| %>

  <%= render "shared/errors", resource: @topic %>

  <div class="row">
    <div class="small-12 column">
      <%= f.text_field :title %>
      <%= f.text_area :description, rows: "5" %>

      <%= f.submit(class: "button", value: t("community.topic.form.#{action_name}.submit_button")) %>
    </div>
  </div>

<% end %>
